@import '../../node_modules/nib/index.styl';

.to-media {
  &-overlay {
    opacity: 0;
  }
}

@media screen and (min-width: 1000px) {
  .to-stamp {
    > header {
      background: #3f51b5;
      animation: 1s moveArea infinite;
      position: relative;
    }

    #nav-spacer {
      height: 0;
    }

    .slideWrapper {
      animation: 1s moveArea infinite;

      .slider {
        top: 0;
      }
    }

    .contentWrapper {
      background: #29d;
      animation: 1s moveArea infinite;
    }

    footer {
      animation: 1s moveArea infinite;
      position: relative;
    }
  }
}

.to-media {
  &-overlay {
    opacity: 1;
  }

  // Configuration
  &-table {
    width: 100%;
    height: 100%;
    display: inline-table;
  }

  &-cell {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-family: 'Lato', sans-serif;
    font-size: 16px;
    display: table-cell;
    vertical-align: middle;
  }

  &-link {
    display: block;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
    width: 100%;
  }

  &-remove {
    cursor: pointer;
    display: block;
    font-size: 22px;
    height: 3em;
    opacity: 0.6;
    position: absolute;
    right: 1em;
    top: 1em;
    transition: all 0.3s ease 0s;
    width: 3em;
    z-index: 4;

    &:hover {
      opacity: 1;
    }

    .to-media--close {
      position: relative;
    }
  }
}

.o {
  &-takeover {
    background-color: rgba(0, 0, 0, 0.4);
    width: 100%;
    height: 100%;
    display: none;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 123456;
  }
}

.bs {
  &__video {
    position: absolute;

    #bgvideo, canvas {
      width: 100%;
      height: 100%;
    }
  }
}

.o-takeover__volume {
  animation: 1.6s iconMove infinite;
  bottom: 2.5%;
  color: #ffde01;
  font-size: 3em;
  height: 46px;
  position: absolute;
  right: 2%;
  width: 46px;
  z-index: 50;
}

@keyframes moveArea {
  10% {
    transform: translate3d(0, -0.5em, 0);
  }

  20% {
    transform: translate3d(0, 1em, 0);
    filter: invert(90%) blur(0px);
  }

  30% {
    transform: translate3d(0, -0.7em, 0);
    filter: invert(100%) blur(2px);
  }

  40% {
    transform: translate3d(0, 0.6em, 0);
  }

  50% {
    transform: translate3d(0, -0.3em, 0);
  }

  60% {
    transform: translate3d(0, 0.8em, 0);
    filter: invert(90%) blur(0px);
  }

  70% {
    transform: translate3d(0, -0.6em, 0);
  }

  80% {
    transform: translate3d(0, 0.2em, 0);
    filter: invert(100%) blur(2px);
  }

  90% {
    transform: translate3d(0, -1em, 0);
    filter: invert(100%) blur(2px);
  }

  100% {
    transform: translate3d(0, -0.5em, 0);
    filter: invert(90%) blur(0px);
  }
}

// Small screen backup
@media screen and (min-height: 500px) and (max-height: 800px) {
  .to-media {
    &-cell {
      font-size: 12px;
    }
  }
}
